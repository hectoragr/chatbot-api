{
  "name": "vercel-dynamodb-chat-api",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "tsc -p .",
    "vercel-build": "yarn build",
    "dev": "NODE_ENV=development tsx watch api/index.ts",
    "start": "node .vercel/output/functions/index.func/index.js",
    "ddb:start": "docker compose up -d dynamodb",
    "ddb:stop": "docker compose down",
    "ddb:bootstrap": "LOCAL_DDB=true DDB_ENDPOINT=http://localhost:8000 node scripts/bootstrap-ddb.mjs",
    "ddb:purge": "LOCAL_DDB=true DDB_ENDPOINT=http://localhost:8000 node scripts/bootstrap-ddb.mjs --purge --yes && LOCAL_DDB=true DDB_ENDPOINT=http://localhost:8000 node scripts/bootstrap-ddb.mjs"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.637.0",
    "@aws-sdk/lib-dynamodb": "^3.637.0",
    "@types/cors": "^2.8.19",
    "@types/express-jwt": "^6.0.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "express-oauth2-jwt-bearer": "^1.7.1",
    "express-openid-connect": "^2.19.2",
    "helmet": "^8.1.0",
    "jwks-rsa": "^3.2.0",
    "node-fetch": "^2.6.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.3.1",
    "@vercel/node": "^2.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2"
  }
}
